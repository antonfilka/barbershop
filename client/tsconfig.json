{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": "src",
    "paths": {
      "api": ["api"],
      "api/*": ["api/*"],
      "components": ["components"],
      "components/*": ["components/*"],
      "modules": ["modules"],
      "modules/*": ["modules/*"],
      "pages": ["pages"],
      "pages/*": ["pages/*"],
      "layouts": ["layouts"],
      "layouts/*": ["layouts/*"],
      "services": ["services"],
      "services/*": ["services/*"],
      "store": ["store"],
      "store/*": ["store/*"],
      "types": ["types"],
      "types/*": ["types/*"],
      "utils": ["utils"],
      "utils/*": ["utils/*"],
      "tests": ["tests"],
      "tests/*": ["tests/*"],
      "__mocks__": ["__mocks__"],
      "__mocks__/*": ["__mocks__/*"]
    }
  },
  "include": ["src", "./jest-setup.ts"]
}
